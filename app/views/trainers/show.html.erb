<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<table>
	<tr>
		<th>Pokemon</th>
		<th>Level</th>
		<th>Health</th>
	</tr>
	<tr>
	<% @pokemons.each do |p| %>
       	<td><%= p.name%></td>
       	<td><%= p.level%></td>
       	<td><%= p.health%></td>
       	<td><%= button_to "Damage!", damage_path(id: p), :class => "button medium", :method =>:patch %></td>
    </tr>
    <% end %>
</table>




<%= button_to "Create!", new_path, :class => "button medium", :method =>:get if @trainer.id == current_trainer.id%> 
